@{
  Layout = "_Layout";
}

@using RecipeBook.Models;
@model List<RecipeBook.Models.Recipe>;


@using (Html.BeginForm())
{
  <form asp-controller="RecipesController" asp-action="SearchBy" method="get">
      <p>
          Ingredients: <input type="text" name="searchString" />
          <input type="submit" value="Filter" />
      </p>
  </form>
}

@foreach(Recipe recipe in Model)
{
  <li>@Html.ActionLink($"{recipe.RecipeName}", "Details", "Recipes", new { id = recipe.RecipeId })</li>
}









