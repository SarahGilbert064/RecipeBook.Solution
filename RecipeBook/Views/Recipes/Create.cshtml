@{
  Layout = "_Layout";
}

@model RecipeBook.Models.Recipe

<h4>Create a new Recipe</h4>

@using (Html.BeginForm())

{
    @Html.LabelFor(model => model.RecipeName)
    @Html.TextBoxFor(model => model.RecipeName)
    <br>
    @Html.LabelFor(model => model.Ingredients)
    @Html.TextAreaFor(model => model.Ingredients)
    <br>
    @Html.LabelFor(model => model.Instructions)
    @Html.TextAreaFor(model => model.Instructions)
    <br>
    @Html.Label("Select Rating")
    <br>
    @Html.Label("1 Star")
    @Html.RadioButtonFor(model => model.StarRating,"1 Star")
    <br>
    @Html.Label("2 Star")
    @Html.RadioButtonFor(model => model.StarRating,"2 Star")
    <br>
    @Html.Label("3 Star")
    @Html.RadioButtonFor(model => model.StarRating,"3 Star")
    <br>
    @Html.Label("4 Star")
    @Html.RadioButtonFor(model => model.StarRating,"4 Star")
    <br>
    @Html.Label("5 Star")
    @Html.RadioButtonFor(model => model.StarRating,"5 Star")
    <br>

    @Html.Label("Select a Category")
    @Html.DropDownList("CategoryId")
    <br>
    
    <input type="submit" value="Create Recipe" class="btn btn-default" />
}


<p>@Html.ActionLink("Show all Recipes", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>